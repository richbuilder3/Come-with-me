<h1>Home Page</h1>

 

<button type="button" class="btn btn-default btn-lg">
	<%= link_to  ("New Trip"), '/trips/new' %>
</button>

 <button type="button" class="btn btn-default btn-lg">
<%= link_to  ("Travelers"), '/travelers' %>
</button>

<div class="col-md-4">
<table class="table table-striped">
	<% @travelers.each do |traveler| %>
	<tr><td><%= traveler.email %></td>
	<td><%= traveler.name %></tr>
	<td><%= image_tag traveler.gravatar_url %></td>
	<% end %>
</table>
</div>

<div class="col-xs-6 col-md-4">
<table class="table table-striped">
	<% @trips.each do |trip| %>
		<tr>
		<td><%= trip.destination %></td>
		<td><%= trip.origin %></td>
		<td><%= trip.length_of_stay %></td>
		<!-- <td><%= trip.traveler_id %></td> -->
		<td><%= trip.accomplished %></td>
		<td><%= trip.traveler.name %><td>
		</tr>	
	<% end %>
</table>
</div

