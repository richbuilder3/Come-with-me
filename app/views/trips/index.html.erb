<h1>Trips</h1>

<button type="button" class="btn btn-default btn-lg">
	<%= link_to  ("Home"), '/' %>
</button>

<button type="button" class="btn btn-default btn-lg">
	<%= link_to  ("New Trip"), '/trips/new' %>
</button>
<div class="container">
	<table class="table table-striped">

		<% @trips.each do |trip| %>
		<tr>
		<td><h5>Destination</h5><%= link_to trip.destination, trip %></td>
		<td><h5>Origin</h5><%= trip.origin %></td>
		<td><h5>Length of Stay(in days)</h5><%= trip.length_of_stay %></td>
		<!-- <td><h5>Email</h5><%= trip.traveler.email %><td> -->
		<td><h5>Accomplished yet?</h5><%= trip.accomplished %></td>
		<td><%= image_tag current_traveler.gravatar_url %></td>

		</tr>
		<% end %>
	</table>
</div>
	




